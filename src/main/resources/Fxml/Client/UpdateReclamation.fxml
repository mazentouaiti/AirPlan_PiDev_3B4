<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="667.0" prefWidth="716.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.airPlan.controllers.UpdateReclamation">
    <children>
        <VBox layoutX="8.0" layoutY="125.0" prefHeight="527.0" prefWidth="700.0" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <padding>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
            </padding>
            <children>
                <HBox spacing="50.0">
                    <children>
                        <VBox prefWidth="300.0" spacing="12.0">
                            <children>
                                <Label style="-fx-font-weight: bold; -fx-text-fill: #444;" text="Type of reclamation" />
                                <ComboBox fx:id="typeComboBox" prefHeight="26.0" prefWidth="415.0" promptText="Type" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-background-color: WHITE; -fx-border-color: #e0e0e0; -fx-padding: 8;" />
                                <Label style="-fx-font-weight: bold; -fx-text-fill: #444;" text="Date de reclamation" />
                                <DatePicker fx:id="datePicker" prefHeight="26.0" prefWidth="215.0" promptText="Date" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #e0e0e0; -fx-padding: 8; -fx-background-color: white;" />
                                <Label style="-fx-font-weight: bold; -fx-text-fill: #444;" text="Rating" />
                                <TextField fx:id="ratingField" prefHeight="26.0" prefWidth="469.0" promptText="Rating" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #e0e0e0; -fx-padding: 8;" />
                                <Label style="-fx-font-weight: bold; -fx-text-fill: #444;" text="Status" />
                                <ComboBox fx:id="statusComboBox" prefHeight="26.0" prefWidth="415.0" promptText="Status" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-background-color: WHITE; -fx-border-color: #e0e0e0; -fx-padding: 8;" />
                            </children>
                        </VBox>
                        <VBox prefWidth="300.0" spacing="12.0">
                            <children>
                                <Label style="-fx-font-weight: bold; -fx-text-fill: #444;" text="Description" />
                                <TextField fx:id="descriptionField" prefHeight="331.0" prefWidth="300.0" promptText="Description" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #e0e0e0; -fx-padding: 8;" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <Label fx:id="errorLabel" style="-fx-text-fill: #d32f2f; -fx-font-size: 13px; -fx-padding: 10 0 0 0;" wrapText="true" />
                <HBox alignment="CENTER_RIGHT" spacing="15.0" style="-fx-padding: 20 0 0 0;">
                    <children>
                        <Button mnemonicParsing="false" onAction="#annuler" prefHeight="31.0" prefWidth="142.0" text="Cancel" />
                        <Button mnemonicParsing="false" onAction="#update" prefHeight="28.0" prefWidth="133.0" style="-fx-background-color: #5a9090; -fx-text-fill: #FFFFFF;" text="update">
                            <font>
                                <Font size="15.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
      <HBox alignment="CENTER_LEFT" prefHeight="108.0" prefWidth="716.0" style="-fx-background-color: #5a9090;">
         <children>
            <Label prefHeight="18.0" prefWidth="38.0" />
            <Label prefHeight="68.0" prefWidth="346.0" text="Update Reclamation" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Aldhabi" size="60.0" />
               </font>
            </Label>
         </children>
      </HBox>
    </children>
</AnchorPane>
